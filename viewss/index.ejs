    <script>
      document.addEventListener('DOMContentLoaded', function() {
    const alertElements = document.querySelectorAll('.alert');

    alertElements.forEach(function(alertElement) {
      setTimeout(function() {
        alertElement.style.display = 'none';
      }, 5000); // Hide the alert after 10 seconds (10000 milliseconds)
    });
  });
      // Track changes to event type field and trigger modal on mouse-out
      const eventTypeInput = document.getElementById("eventType");
      eventTypeInput.addEventListener("change", function () {
        const enteredEventType = eventTypeInput.value.toLowerCase();
        const allowedEventTypes = [
          // Tech Events
          "conference",
          "workshop",
          "seminar",
          "meetup",
          "webinar",
          "tech",
          "hackathon",
          // Non-Tech Events
          "music concert",
          "art exhibition",
          "fitness class",
          "food festival",
          "comedy show",
          // Add more event types as needed
        ];

        if (!allowedEventTypes.includes(enteredEventType)) {
          const validationErrorModal = new bootstrap.Modal(
            document.getElementById("validationErrorModal")
          );
          validationErrorModal.show();
        }
      });

      // Toggle dark mode on button click
      const toggleModeButton = document.getElementById("toggleMode");
      toggleModeButton.addEventListener("click", function () {
        const isDarkMode = document.body.classList.contains("dark-mode");
        if (isDarkMode) {
          document.body.classList.remove("dark-mode");
          localStorage.setItem("darkMode", "false"); // Store the value in local storage as a string
        } else {
          document.body.classList.add("dark-mode");
          localStorage.setItem("darkMode", "true"); // Store the value in local storage as a string
        }
      });

      // Check if dark mode is stored in local storage
      const isDarkModeStored = localStorage.getItem("darkMode") === "true"; // Compare with the string 'true'
      if (isDarkModeStored) {
        document.body.classList.add("dark-mode");
      }
    </script>
